<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFE0">

    <ImageView
        android:id="@+id/bluetoothStatusImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="start|top"
        android:padding="16dp"
        android:src="@drawable/bluetooth_connection_detected_black_btn"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/profileImageButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/profile_btn"
                android:contentDescription="프로필 이미지 버튼" />

            <TextView
                android:id="@+id/profileNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="자유분발"
                android:textColor="#FF000000"
                android:gravity="center"
                android:textSize="50sp"
                android:fontFamily="@font/notosanskr_bold"/>

            <TextView
                android:id="@+id/welcomeTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="편안한 자세로\n 발 받침대를 사용하세요"
                android:textColor="#FF000000"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="30dp"
                android:fontFamily="@font/notosanskr_medium"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/image_with_yellow_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/power_off_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/power_off_btn"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전원 OFF"
                        android:gravity="center"
                        android:textColor="#FF000000"
                        android:fontFamily="@font/notosanskr_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/foot_control_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/foot_control_btn"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="발로 조절"
                        android:gravity="center"
                        android:textColor="#FF000000"
                        android:fontFamily="@font/notosanskr_regular"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/app_control_button"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:background="@drawable/app_control_new_2_btn"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="앱으로 조절"
                        android:gravity="center"
                        android:textColor="#FF000000"
                        android:fontFamily="@font/notosanskr_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/scan_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bluetooth_btn"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="블루투스 연결"
                        android:gravity="center"
                        android:textColor="#FF000000"
                        android:fontFamily="@font/notosanskr_regular"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/gradient"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/home_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/home_full_btn"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="홈"
                        android:gravity="center"
                        android:textColor="#FF000000"
                        android:fontFamily="@font/notosanskr_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/record_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/record_new_btn"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기록"
                        android:gravity="center"
                        android:textColor="#FF000000"
                        android:fontFamily="@font/notosanskr_regular"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>

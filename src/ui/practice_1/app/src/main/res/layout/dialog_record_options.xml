<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFE0">

    <TextView
        android:id="@+id/selectedDocumentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/adjustPostureButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이 자세로 발 받침대 조절하기"
        android:padding="8dp" />

    <Button
        android:id="@+id/deletePostureButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="자세 삭제하기"
        android:padding="8dp" />

    <Button
        android:id="@+id/renamePostureButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름 변경하기"
        android:padding="8dp" />

</LinearLayout>
